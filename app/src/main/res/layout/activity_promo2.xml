<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tool"
    xmlns:tools2="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/abc_cab_background_internal_bg"
    tools:context="urrutia.benavides.jorge.stayawareredapoyo.NiÃ±os.AgregarAdultosActivity">


    <EditText
        android:id="@+id/nombreagregar8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dias8"
        android:layout_marginTop="53dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName" />


    <Button
        android:id="@+id/btninicio8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nombreagregar8"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="editar" />

    <TextView
        android:id="@+id/dias8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Promo 2"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/precio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nombreagregar8"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="Precio"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnprecio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/precio2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="editar" />
</RelativeLayout>
