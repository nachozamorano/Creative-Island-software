<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tool"
    xmlns:tools2="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/abc_cab_background_internal_bg"
    tools:context="urrutia.benavides.jorge.stayawareredapoyo.NiÃ±os.AgregarAdultosActivity">


    <EditText
        android:id="@+id/nombreagregar7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName" />


    <Button
        android:id="@+id/btninicio7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nombreagregar7"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="editar" />

    <TextView
        android:id="@+id/dias7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Promo 1"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/precio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nombreagregar7"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Precio"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnprecio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/precio1"
        android:layout_alignBottom="@+id/precio1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="editar" />
</RelativeLayout>
